{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "rsa-keys/**/*",
    "clear-texts/**/*",
    "encrypted-messages/**/*",
    "decrypted-messages/**/*"
  ],
  "exclude": ["node_modules"]
}
